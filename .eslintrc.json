{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "overrides": [
    {"files": ["*.js"]}
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": 0,
    "endOfLine": "auto",
    "arrow-parens": "off"
  }
}
